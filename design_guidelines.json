    "weights": {
      "heading": "700",
      "body": "400",
      "bold": "600"
    },
    "usage": {
      "h1": "text-4xl md:text-5xl font-bold tracking-tight text-gold-400",
      "h2": "text-2xl md:text-3xl font-semibold text-white",
      "h3": "text-xl font-medium text-gray-200",
      "body": "text-base text-gray-300 leading-relaxed",
      "number_call": "text-6xl md:text-8xl font-black tracking-tighter text-white drop-shadow-[0_0_15px_rgba(234,179,8,0.5)]",
      "ticket_number": "text-lg font-bold text-center"
    }
  },
  "colors": {
    "palette": {
      "background": {
        "default": "#0a0a0c",
        "paper": "#121216",
        "glass": "rgba(18, 18, 22, 0.7)"
      },
      "primary": {
        "main": "#F59E0B",
        "light": "#FBBF24",
        "dark": "#B45309",
        "contrast": "#000000"
      },
      "secondary": {
        "main": "#EC4899",
        "light": "#F472B6",
        "dark": "#BE185D",
        "contrast": "#FFFFFF"
      },
      "accent": {
        "success": "#10B981",
        "error": "#EF4444",
        "info": "#3B82F6",
        "gold": "linear-gradient(135deg, #FDE68A 0%, #D97706 100%)"
      }
    },
    "gradients": {
      "gold_rush": "bg-gradient-to-r from-amber-300 via-yellow-500 to-amber-600",
      "festive_night": "bg-gradient-to-b from-slate-900 via-purple-950 to-slate-900",
      "glass_surface": "bg-white/5 backdrop-blur-xl border border-white/10"
    }
  },
  "layout": {
    "spacing": {
      "container": "px-4 md:px-8 max-w-7xl mx-auto",
      "section": "py-12 md:py-20",
      "card_padding": "p-6 md:p-8"
    },
    "grid": {
      "dashboard": "grid grid-cols-1 md:grid-cols-12 gap-6",
      "tickets": "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
    },
    "mobile": {
      "nav_height": "h-16",
      "safe_area": "pb-safe"
    }
  },
  "components": {
    "buttons": {
      "primary": "rounded-full bg-gradient-to-r from-amber-500 to-orange-600 text-white font-bold shadow-lg hover:shadow-amber-500/25 hover:scale-105 transition-all duration-300",
      "secondary": "rounded-full border border-white/20 bg-white/5 text-white hover:bg-white/10 transition-all",
      "ghost": "text-gray-400 hover:text-white transition-colors"
    },
    "cards": {
      "base": "rounded-2xl bg-[#18181b] border border-white/10 shadow-xl overflow-hidden",
      "glass": "rounded-2xl bg-black/40 backdrop-blur-md border border-white/10 shadow-2xl",
      "interactive": "hover:border-amber-500/50 transition-colors cursor-pointer"
    },
    "inputs": {
      "base": "bg-black/20 border-white/10 focus:border-amber-500/50 text-white placeholder:text-gray-600 rounded-xl h-12"
    },
    "ticket": {
      "container": "bg-[#fff8e1] text-black rounded-lg overflow-hidden shadow-lg border-4 border-amber-600",
      "grid": "grid grid-cols-9 gap-[1px] bg-amber-600/20",
      "cell": "h-10 flex items-center justify-center text-lg font-bold bg-white",
      "cell_empty": "bg-amber-100/50",
      "cell_marked": "bg-green-500 text-white relative overflow-hidden after:content-[''] after:absolute after:inset-0 after:bg-white/20 after:rounded-full after:scale-0 after:animate-ping"
    }
  },
