{
  "identity": {
    "persona": "E1 - The Anti-AI Designer",
    "mission": "Create a festive, high-contrast, engaging Tambola experience that feels like a digital Diwali party.",
    "principles": [
      "Fusion: Casino Luxury x Indian Festivity",
      "Emotion: Excitement, Anticipation, Celebration",
      "Clarity: Numbers must be readable at a glance",
      "Depth: Glassmorphism with gold accents"
    ]
  },
  "typography": {
    "fonts": {
      "heading": "Outfit, sans-serif",
      "body": "Manrope, sans-serif",
      "numbers": "JetBrains Mono, monospace"
